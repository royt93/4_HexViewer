<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App title -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Android Hex Viewer (Fork)"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <!-- About this fork -->
            <TextView
                android:id="@+id/aboutFork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="This project is a fork of HexViewer, an open-source Android application for viewing and editing files in hexadecimal and plain text.\n\nThe original project is licensed under the GNU General Public License v3.0 or later (GPLv3+)."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!-- Modifications -->
            <TextView
                android:id="@+id/modificationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="ðŸ“Œ Modifications in this fork:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modificationsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="@string/ui_improvements_bug_fixes_performance_optimizations_n_integrated_leakcanary_for_memory_leak_detection_n_added_proguard_configuration_n_updated_launcher_icon_n_added_features_rate_app_more_apps_share_app_n_enabled_adaptive_120hz_refresh_rate_support_n_fixed_font_scaling_issues_n_added_splash_screen_n_added_animations_and_decorative_lottie_effects_n_fixed_edge_to_edge_rendering_n_support_for_android_api_35_n_many_other_bug_fixes_improvements" />

            <!-- Credits -->
            <TextView
                android:id="@+id/creditsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/credits_attribution"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/creditsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Original author: Keidan\nOriginal project: HexViewer\nContributors: See the original repository for full contributor list.\nAdditional modifications by: Roy" />

            <!-- License -->
            <TextView
                android:id="@+id/licenseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="ðŸ“œ License"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/licenseContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="This project is licensed under the terms of the GNU General Public License v3.0 or later. You are free to use, modify, and redistribute this software under the same license." />

            <!-- Source code link -->
            <TextView
                android:id="@+id/sourceCodeLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="ðŸ”— Source Code"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="56dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
