<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent_color_enabled</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_enabled</item>
        <item name="android:textColorPrimary">@color/text_color_primary_enabled</item>
        <item name="android:actionMenuTextColor">@color/actionMenuTextColor</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="actionMenuTextColor">@color/actionMenuTextColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/text_color_enabled</item>
        <item name="android:colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:itemBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="alertDialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:alertDialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:textColorHint">@color/text_color_primary_enabled</item>
        <item name="android:checkboxStyle">@style/AppTheme.CheckBoxStyle</item>
        <item name="android:radioButtonStyle">@style/AppTheme.RadioButtonStyle</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
    </style>

    <style name="AppTheme.PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:textSize">@dimen/preferences_textSize</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_color_enabled</item>
        <item name="android:colorAccent">@color/accent_color_enabled</item>
        <item name="android:textColorPrimary">@color/text_color_primary_enabled</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">@color/text_color_enabled</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent_color_enabled</item>
        <item name="android:textSize">@dimen/controls_textSize</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent_color_enabled</item>
        <item name="android:textSize">@dimen/controls_textSize</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent_color_enabled</item>
        <item name="android:textSize">@dimen/controls_textSize</item>
    </style>

    <style name="AppTheme.CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_color_enabled</item>
        <item name="buttonTint">@color/accent_color_enabled</item>
        <item name="android:textSize">@dimen/controls_textSize</item>
    </style>

    <style name="AppTheme.ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorResultError</item>
        <item name="android:textSize">@dimen/app_theme_error_text_appearance_textSize</item>
    </style>

    <style name="AppTheme.HintPrefTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/app_theme_hint_text_appearance_textSize</item>
    </style>

    <style name="TextLabelSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/controls_textSize</item>
    </style>


    <style name="AppTheme.RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text_color_enabled</item>
        <item name="buttonTint">@color/accent_color_enabled</item>
        <item name="android:textSize">@dimen/controls_textSize</item>
    </style>

    <style name="AppTheme.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/input_label_textSize</item>
        <item name="android:paddingTop">@dimen/input_label_paddingTop</item>
        <item name="android:paddingBottom">@dimen/input_label_paddingBottom</item>
        <item name="android:paddingStart">@dimen/input_label_paddingStart</item>
        <item name="android:paddingEnd">@dimen/input_label_paddingEnd</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!--        <item name="android:windowBackground">@drawable/ic_background</item>-->
        <!--        <item name="android:layout_width">match_parent</item>-->
        <!--        <item name="android:navigationBarColor">@color/colorLightPrimaryDark</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:statusBarColor">@color/transparent</item>-->
        <!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/startup</item>
    </style>
</resources>
